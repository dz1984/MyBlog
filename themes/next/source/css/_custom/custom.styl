// Custom styles.
.quote {
  margin-top: -150px;
}

.quote h3 {
  font-size: 25px;
}

.quote blockquote {
  color: #000;
  background: #f9f9f9;
  border-left: 10px solid #ccc;
  padding: 2em 20px;
  quotes: "\201C""\201D""\2018""\2019";
}

.quote blockquote:before {
  color: #ccc;
  content: open-quote;
  font-size: 4em;
  line-height: 0.1em;
  margin-right: 0.25em;
  vertical-align: -0.4em;
}

.quote blockquote:after {
  color: #ccc;
  content: close-quote;
  font-size: 4em;
  line-height: 0.1em;
  margin-left: 0.25em;
  vertical-align: -0.6em;
}

.poem {
  text-align: center;
}
